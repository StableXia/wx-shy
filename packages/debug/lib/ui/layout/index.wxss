.debug-layout {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}
.debug-layout__header {
  padding: 4px 8px;
  border-bottom: 1px solid #f0f0f0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.debug-layout__body {
  flex: 1 1 0%;
  overflow: auto;
}
