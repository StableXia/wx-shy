.debug-wrapper .debug-lancher {
  padding: 8rpx 16rpx;
  position: fixed;
  width: auto;
  color: #fff;
  background-color: rgba(59, 38, 38, 0.6);
  border-radius: 4rpx;
  z-index: 10001;
}
.debug-wrapper .debug-modal {
  background: #fff;
  position: fixed;
  z-index: 10001;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  padding-bottom: constant(safe-area-inset-bottom);
  /* iOS < 11.2 */
  padding-bottom: env(safe-area-inset-bottom);
  /* iOS >= 11.2 */
}
.debug-wrapper .debug-modal__inner {
  display: flex;
  flex-direction: column;
  height: 100%;
}
.debug-wrapper .debug-modal__body {
  padding: 8rpx 16rpx;
  flex: 1 1 0%;
}
.debug-wrapper .debug-modal__footer {
  padding: 8rpx 16rpx;
  border-top: 1px solid #f0f0f0;
  display: flex;
}
