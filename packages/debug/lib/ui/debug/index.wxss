.debug-wrapper .debug-lancher {
  padding: 4px 8px;
  position: fixed;
  width: auto;
  color: #fff;
  background-color: rgba(59, 38, 38, 0.6);
  border-radius: 4px;
  z-index: 10001;
}
.debug-wrapper .debug-modal {
  background: #fff;
  position: fixed;
  z-index: 10001;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  padding-bottom: constant(safe-area-inset-bottom);
  /* iOS < 11.2 */
  padding-bottom: env(safe-area-inset-bottom);
  /* iOS >= 11.2 */
}
.debug-wrapper .debug-modal__inner {
  display: flex;
  flex-direction: column;
  height: 100%;
}
.debug-wrapper .debug-modal__body {
  padding: 4px 8px;
  flex: 1 1 0%;
  overflow: auto;
}
.debug-wrapper .debug-modal__footer {
  padding: 4px 8px;
  border-top: 1px solid #f0f0f0;
  display: flex;
}
.debug-wrapper .debug-modal__footer button {
  flex: 1 1 0% !important;
}
