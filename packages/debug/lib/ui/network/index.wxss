.debug-network__item {
  padding: 4px 0;
  display: flex;
  justify-content: space-between;
}
.debug-network__item__url {
  flex: 1 1 0%;
  white-space: pre-wrap;
  word-break: break-word;
}
.debug-network__item__code {
  color: #fff;
  background-color: rgba(59, 38, 38, 0.6);
  padding: 2px 4px;
}
.debug-network__item + .debug-network__item {
  border-top: 1px solid #f0f0f0;
}
.debug-network-modal {
  display: flex;
  flex-direction: column;
  background: #fff;
  position: fixed;
  z-index: 10002;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  padding-bottom: constant(safe-area-inset-bottom);
  /* iOS < 11.2 */
  padding-bottom: env(safe-area-inset-bottom);
  /* iOS >= 11.2 */
}
.debug-network-modal__header {
  padding: 4px 8px;
  border-bottom: 1px solid #f0f0f0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.debug-network-modal__close {
  font-size: 24px;
}
.debug-network-modal__body {
  flex: 1 1 0%;
  overflow: auto;
  padding: 4px 8px;
}
.debug-network-modal__block {
  padding: 8px 0;
}
.debug-network-modal__block + .debug-network-modal__block {
  border-top: 1px solid #f0f0f0;
}
.debug-title {
  font-weight: bold;
}
.debug-layout {
  display: flex;
}
.debug-layout__flex {
  flex: 1 1 0%;
}
.debug-break-word {
  word-break: break-word;
}
